<form id="gardener_update_form" action="/gardeners" method="put">
	<fieldset>
		<legend>👨‍🌾 UPDATE {{gardener.fname}} {{gardener.lname}}</legend>
		<div>
			<label>First Name: </label>
			<input type="text" name="fname" value="{{gardener.fname}}">
		</div>
		<div>
			<label>Last Name: </label>
			<input type="text" name="lname" value="{{gardener.lname}}">
		</div>
	</fieldset>
</form>
<button onclick="updateGardener({{gardener.id}})">Update</button>
<a href="/gardeners">CANCEL</a>